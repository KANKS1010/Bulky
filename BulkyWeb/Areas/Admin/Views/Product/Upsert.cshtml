@model ProductVM

<div class="card shadow border-0 btn-outline-dark mt-4">
    <div class="card-header btn-outline-dark bg-gradient ml-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id!=0?"Update":"Create") Product</h2>
        </div>
    </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <input asp-for="Product.ImageUrl" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        @*<div asp-validation-summary="ModelOnly"></div>*@
                        <div class="form-floating py-2 col-12">
                            <label style="top: -14px;left: -45px; height: 47%; padding: 5px 1.5rem;"
                                   asp-for="Product.Title" class="btn-outline-secondary">Product Name</label>
                            <input asp-for="Product.Title" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Title" class="text-danger "></span>
                        </div>
                        <hr />
                        <div class="form-floating py-2 col-12">
                            <label style="top: 17px;left: -45px;height: 10%;padding: 7px 1.5rem;z-index: 10;position: relative;"
                                   asp-for="Product.Description" class="btn-outline-secondary">Description</label>
                            <textarea asp-for="Product.Description" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label style="top: -14px;left: -45px; height: 47%; padding: 5px 1.5rem;"
                                   asp-for="Product.ImageUrl" class="btn-outline-secondary">Image Url</label>
                            <input type="file" name="file" class="form-control border-0 shadow" />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label style="top: -14px;left: -45px; height: 47%; padding: 5px 1.5rem;"
                                   asp-for="Product.ISBN" class="btn-outline-secondary">ISBN</label>
                            <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.ISBN" class="text-danger "></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label style="top: -14px;left: -45px; height: 47%; padding: 5px 1.5rem;"
                                   asp-for="Product.Author" class="btn-outline-secondary">Author</label>
                            <input asp-for="Product.Author" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Author" class="text-danger "></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label style="top: -14px;left: -45px; height: 47%; padding: 5px 1.5rem;"
                                   asp-for="Product.ListPrice" class="btn-outline-secondary">List Price</label>
                            <input asp-for="Product.ListPrice" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.ListPrice" class="text-danger "></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label style="top: -14px;left: -45px; height: 47%; padding: 5px 1.5rem;"
                                   asp-for="Product.Price" class="btn-outline-secondary">Price for 1-50</label>
                            <input asp-for="Product.Price" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Price" class="text-danger "></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label style="top: -14px;left: -45px; height: 47%; padding: 5px 1.5rem;"
                                   asp-for="Product.Price50" class="btn-outline-secondary">Price for 50+</label>
                            <input asp-for="Product.Price50" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Price50" class="text-danger "></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label style="top: -14px;left: -45px; height: 47%; padding: 5px 1.5rem;"
                                   asp-for="Product.Price100" class="btn-outline-secondary">Price for 100+</label>
                            <input asp-for="Product.Price100" class="form-control border-0 shadow" />
                            <span asp-validation-for="Product.Price100" class="text-danger "></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label style="top: -14px;left: -45px; height: 47%; padding: 5px 1.5rem;"
                                   asp-for="Product.CategoryId" class="btn-outline-secondary">Category Id</label>
                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-control border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger "></span>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-outline-secondary shadow form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-outline-secondary shadow form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" style="background-color: #0b0b0b;" class="btn btn-outline-primary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px;border:1px solid #bbb9b9; "/>
                        
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: ' mentions anchor autolink charmap codesample emoticons  link lists  searchreplace table visualblocks wordcount checklist mediaembed casechange  formatpainter pageembed permanentpen footnotes advtemplate   mergetags powerpaste tinymcespellchecker autocorrect a11ychecker typography inlinecss',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | tinycomments | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}